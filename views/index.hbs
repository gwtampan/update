<h1>ADMIN - PRODUCTS</h1>
<section class="get">
    <h3>PRODUCTS ITEM</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>imagePath: {{ this.imagePath }}</div>
                <div>description: {{ this.description }}</div>
                <div>price: {{ this.price }}</div>
                <div>ID: {{ this._id }}</div>
            </article>
        {{/each}}
    </div>
</section>

<section class="insert">
    <h3>TAMBAH PRODUCT</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="imagePath">imagePath</label>
            <input type="text" id="imagePath" name="imagePath">
        </div>
        <div class="input">
            <label for="description">description</label>
            <input type="text" id="author" name="description">
        </div>
        <div class="input">
            <label for="price">price</label>
            <input type="number" id="price" name="price">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>

<section class="update">
    <h3>UPDATE PRODUCT</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="imagePath">imagePath</label>
            <input type="text" id="imagePath" name="imagePath">
        </div>
        <div class="input">
            <label for="description">description</label>
            <input type="text" id="author" name="description">
        </div>
        <div class="input">
            <label for="price">price</label>
            <input type="number" id="price" name="price">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>

<section class="delete">
    <h3>HAPUS PRODUCT</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>
